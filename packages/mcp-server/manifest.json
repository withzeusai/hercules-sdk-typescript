{
  "dxt_version": "0.2",
  "name": "@usehercules/mcp",
  "version": "0.0.1",
  "description": "The official MCP Server for the Hercules API",
  "author": {
    "name": "Hercules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/withzeusai/hercules-sdk-typescript.git"
  },
  "homepage": "https://github.com/withzeusai/hercules-sdk-typescript/tree/main/packages/mcp-server#readme",
  "server": {
    "type": "node",
    "entry_point": "index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "HERCULES_API_KEY": "${user_config.HERCULES_API_KEY}",
        "HERCULES_API_VERSION": "${user_config.HERCULES_API_VERSION}"
      }
    }
  },
  "user_config": {
    "HERCULES_API_KEY": {
      "title": "api_key",
      "description": "",
      "required": false,
      "type": "string"
    },
    "HERCULES_API_VERSION": {
      "title": "api_version",
      "description": "",
      "required": true,
      "type": "string"
    }
  },
  "tools": [],
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
